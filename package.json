{
  "name": "oriun-desktop-frontend",
  "version": "0.1.0",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode production",
    "electron:dev": "concurrently \"npm:watch:react\" \"npm:watch:electron\"",
    "watch:react": "webpack --mode development --watch",
    "watch:electron": "wait-on http://localhost:3000 && electron .",
    "electron:package": "electron-builder --win"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^24.0.0",
    "electron-builder": "^24.6.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.2",
    "@babel/core": "^7.22.9",
    "@babel/preset-react": "^7.22.5"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.4.0",
    "sanitize-html": "^2.11.1"
  },
  "build": {
    "appId": "com.oriun.desktop",
    "directories": {
      "output": "../dist"
    },
    "files": ["**/*"],
    "win": {
      "target": ["nsis", "msi"]
    }
  }
}
